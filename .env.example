# ProxyWhirl Environment Configuration
# Copy this file to .env and configure for your environment

# === Security Configuration ===
# REQUIRED in production - JWT secret key (minimum 32 characters)
PROXYWHIRL_SECRET_KEY=your-super-secure-jwt-secret-key-here-must-be-32-chars-minimum

# === Environment Settings ===
# Options: development, production, testing
PROXYWHIRL_ENVIRONMENT=development
PROXYWHIRL_DEBUG=true

# === CORS Configuration ===
# CRITICAL: Configure trusted origins - no wildcards allowed
# Development example:
PROXYWHIRL_CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-frontend-domain.com

# Production example:
# PROXYWHIRL_CORS_ORIGINS=https://api.yourdomain.com,https://app.yourdomain.com

# === Trusted Hosts Configuration ===
# CRITICAL for production: Configure trusted host headers to prevent host header attacks
# Development example:
PROXYWHIRL_TRUSTED_HOSTS=localhost,127.0.0.1,api.proxywhirl.local

# Production example:
# PROXYWHIRL_TRUSTED_HOSTS=api.yourdomain.com,*.yourdomain.com

# === Authentication Settings ===
# User credentials (environment-based authentication)
PROXYWHIRL_ADMIN_USERNAME=admin
PROXYWHIRL_ADMIN_PASSWORD=secure-admin-password-here
PROXYWHIRL_ADMIN_EMAIL=admin@yourdomain.com

# Read-only user example
PROXYWHIRL_READONLY_USERNAME=readonly
PROXYWHIRL_READONLY_PASSWORD=secure-readonly-password
PROXYWHIRL_READONLY_EMAIL=readonly@yourdomain.com

# === Database Configuration ===
# PROXYWHIRL_DATABASE_URL=sqlite:///./proxywhirl.db
# PROXYWHIRL_DATABASE_URL=postgresql+asyncpg://user:pass@localhost/dbname

# === Connection Pooling Settings ===
# Base connection pool size for high-concurrency access
PROXYWHIRL_DATABASE_POOL_SIZE=20

# Additional overflow connections beyond base pool
PROXYWHIRL_DATABASE_MAX_OVERFLOW=30

# Connection timeout from pool (seconds)
PROXYWHIRL_DATABASE_POOL_TIMEOUT=30

# === Rate Limiting ===
PROXYWHIRL_RATE_LIMIT_ENABLED=true
PROXYWHIRL_RATE_LIMIT_DEFAULT=100/hour
PROXYWHIRL_RATE_LIMIT_AUTH=10/minute

# === Logging ===
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
PROXYWHIRL_LOG_LEVEL=INFO

# === Performance Settings ===
PROXYWHIRL_MAX_CONCURRENT_REQUESTS=100
PROXYWHIRL_REQUEST_TIMEOUT=30.0

# === WebSocket Settings ===
PROXYWHIRL_WEBSOCKET_MAX_CONNECTIONS=100
PROXYWHIRL_WEBSOCKET_PING_INTERVAL=20.0
