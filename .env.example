# ProxyWhirl Configuration Example
# Copy this file to .env and customize for your environment

# ============================================================================
# REST API Configuration
# ============================================================================

# Rotation Strategy
# Options: round_robin, random, weighted, least_used
PROXYWHIRL_STRATEGY=round_robin

# Request Timeout (seconds)
# Maximum time to wait for a proxied request to complete
PROXYWHIRL_TIMEOUT=30

# Retry Configuration
# Maximum number of retry attempts for failed requests
PROXYWHIRL_MAX_RETRIES=3

# Authentication
# Set to "true" to require API key authentication for all endpoints
PROXYWHIRL_REQUIRE_AUTH=false

# API Key (required if PROXYWHIRL_REQUIRE_AUTH=true)
# Generate a secure random key for production use
PROXYWHIRL_API_KEY=your-secret-api-key-here

# CORS Configuration
# Comma-separated list of allowed origins (use * for development only)
PROXYWHIRL_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
# Maximum requests per minute (default: 100)
PROXYWHIRL_RATE_LIMIT=100

# Rate limit for proxied requests (default: 50)
PROXYWHIRL_PROXY_RATE_LIMIT=50

# ============================================================================
# Storage Configuration
# ============================================================================

# SQLite Database Path
# Path to the persistent proxy pool database
PROXYWHIRL_DB_PATH=./logs/proxy_pool.db

# ============================================================================
# Logging Configuration
# ============================================================================

# Log Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
PROXYWHIRL_LOG_LEVEL=INFO

# Log File Path
# Path to the application log file
PROXYWHIRL_LOG_FILE=./logs/proxywhirl.log

# ============================================================================
# Proxy Configuration
# ============================================================================

# Default Proxy Timeout (seconds)
# Timeout for individual proxy validation checks
PROXYWHIRL_PROXY_TIMEOUT=10

# Health Check Interval (seconds)
# How often to check proxy health (0 to disable background checks)
PROXYWHIRL_HEALTH_CHECK_INTERVAL=300

# Proxy TTL (seconds)
# Time-to-live for cached proxies (0 for no expiration)
PROXYWHIRL_PROXY_TTL=3600

# ============================================================================
# Server Configuration
# ============================================================================

# Server Host
# IP address to bind the server to (0.0.0.0 for all interfaces)
PROXYWHIRL_HOST=0.0.0.0

# Server Port
# Port number for the REST API server
PROXYWHIRL_PORT=8000

# Worker Processes
# Number of uvicorn worker processes (recommended: CPU cores)
PROXYWHIRL_WORKERS=1

# ============================================================================
# Development Configuration
# ============================================================================

# Debug Mode
# Enable detailed error messages and auto-reload (development only)
PROXYWHIRL_DEBUG=false

# Reload on Changes
# Auto-reload server when code changes (development only)
PROXYWHIRL_RELOAD=false
